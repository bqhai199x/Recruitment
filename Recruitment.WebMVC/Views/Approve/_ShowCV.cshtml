<!-- Modal -->

<div class="modal-header bg-info text-white">
    <h5 class="modal-title" id="staticBackdropLabel">Duyệt CV ứng viên @ViewBag.Name</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <embed src="~/wwwroot/CV/@ViewBag.CV" frameborder="0" width="100%" height="600px>
</div>
<div class="modal-footer">
    <div class="text-right pt-2">
        <button type="button" class="btn btn-success" onclick="location.href = '/Approve/ApplyCV?candidateId=@ViewBag.Id&apply=1'">Duyệt</button>
        &nbsp;
        <button type="button" class="btn btn-danger" onclick="location.href = '/Approve/ApplyCV?candidateId=@ViewBag.Id&apply=0'">Loại</button>
    </div>
</div>
